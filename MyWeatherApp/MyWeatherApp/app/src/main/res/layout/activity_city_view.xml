<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityView">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="City" />

            <TextView
                android:id="@+id/Weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Weather"/>

            <TextView
                android:id="@+id/Temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="50dp"
                android:text="Temp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Date"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Date"/>

                <TextView
                    android:id="@+id/current_max"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Max"/>

                <TextView
                    android:id="@+id/current_min"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Min"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_6"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/forecast_time_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"/>

                        <ImageView
                            android:id="@+id/forecast_image_7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/tiempo"/>

                        <TextView
                            android:id="@+id/forecast_status_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="status"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcl_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
